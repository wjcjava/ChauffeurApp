<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.home.MainActivity">



        <LinearLayout
            android:id="@+id/lin_layout"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_order"
                android:gravity="center"
                android:layout_width="@dimen/comment_0_dip"
                android:layout_height="@dimen/comment_50_dip"
                android:layout_weight="1"
                android:text="订单"
                />
            <TextView
                android:id="@+id/tv_enquiry"
                android:gravity="center"
                android:layout_width="@dimen/comment_0_dip"
                android:layout_height="@dimen/comment_50_dip"
                android:layout_weight="1"
                android:text="询价"
                />
            <TextView
                android:id="@+id/tv_mine"
                android:gravity="center"
                android:layout_width="@dimen/comment_0_dip"
                android:layout_height="@dimen/comment_50_dip"
                android:layout_weight="1"
                android:text="我的"
                />
        </LinearLayout>
        <com.example.wangjunchao.chauffeurdemo.library.NoScrollViewPager
            android:id="@+id/pager_home"
            android:layout_width="match_parent"
            android:layout_above="@id/lin_layout"
            android:layout_height="match_parent"/>


</RelativeLayout>
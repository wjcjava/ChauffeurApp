<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/alpha_05_black"
    tools:context=".view.home.PickGoodsActivity">
    <include layout="@layout/title_layout"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海市奉贤区-成都市锦江区"
            android:layout_marginLeft="@dimen/comment_5_dip"
            android:layout_marginTop="@dimen/comment_5_dip"
            android:textSize="@dimen/comment_14_size"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/comment_5_dip"
            android:textSize="@dimen/comment_14_size"
            android:text="订单号 DJWL201704091202"
            android:layout_marginLeft="@dimen/comment_5_dip"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/comment_5_dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/comment_5_dip"
            android:textSize="@dimen/comment_14_size"
            android:text="ERP单号："
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/comment_5_dip"
            android:layout_marginTop="@dimen/comment_5_dip"
            android:textSize="@dimen/comment_14_size"
            android:text="进单号:"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/comment_5_dip"
            android:layout_marginTop="@dimen/comment_5_dip"
            android:textSize="@dimen/comment_14_size"
            android:layout_marginBottom="@dimen/comment_5_dip"
            android:text="恒园电器有限公司"
            />
    </LinearLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/comment_10_dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/lin_layout"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:background="@color/white"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="@dimen/comment_0_dip"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:background="@color/alpha_05_black"
                    android:layout_height="@dimen/comment_2_dip"/>
                <TextView
                    android:id="@+id/tv_take_goods"
                    android:layout_margin="@dimen/comment_10_dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:text="拍货物"
                    android:gravity="center"
                    />
            </LinearLayout>
            <View
                android:layout_width="@dimen/comment_2_dip"
                android:layout_height="match_parent"
                android:background="@color/alpha_05_black"
                />
            <LinearLayout
                android:background="@color/white"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="@dimen/comment_0_dip"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:background="@color/alpha_05_black"
                    android:layout_height="@dimen/comment_2_dip"/>
                <TextView
                    android:layout_margin="@dimen/comment_10_dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:text="拍货物"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/comment_50_dip"
                android:background="@color/royalblue"
                android:text="确认收货"
                android:textSize="@dimen/comment_16_size"
                android:textColor="@color/white"
                android:gravity="center"
                />
        </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_pick"
                android:layout_above="@id/lin_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </RelativeLayout>
</LinearLayout>